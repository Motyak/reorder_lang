#!/usr/bin/env monlang

include <rol.mlp>
let evalProgram rol::evalProgram

{
    var prog $args[#1]
    var context [
        'currLineNb => 0
        'stacks => [] -- "stack of stacks (for nested programs)"
        'queues => [] -- "stack of queues (for nested programs)"
        'succeedsRange? => $false
        'exclusiveRange? => $false
    ]
    var processLine print

    evalProgram(prog, context, processLine)
}
